{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "dist",
      "lib": ["ES2022", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }