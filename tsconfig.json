{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "assets"]
}
