{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "Node16",
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "lib": ["ES2022", "DOM"],                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "test/**/*", "assets/**/*"]
}
